pipeline {
    agent {
        docker {
            image 'node:18-alpine'
            reuseNode true
        }
    }    
    stages {
        stage('build') {
            steps {
                sh '''
                  echo "running the build"
                  node --version
                  npm --version
                  npm ci
                  npm run build
                  ls -la
                '''  
            }
        }
        stage('test') {
            steps {
                sh '''
                 echo "Test stage"
                 test -f build/index.html
                 npm --version
                 npm test
                '''
            }
        }
    }
    post {
        always{
            junit 'test-results/junit.xml'
        }
    }
}
